  body
    block alert
      div(class="successAlert myAlert", id="myAlert")
          div(class="pure-g")            
            div(class="pure-u-5-5 headerAlert")
              p Alert
            div(class="pure-u-5-5 messageDiv")
              p Message of alert              
            .pure-u-3-5
            div(class="pure-u-2-5")
              div(type="button", class="pure-button button-xsmall", name="btnConfirmar") Confirmar                
    block menu
      div(class='custom-wrapper pure-g', id='menu')
        div(class='pure-u-1 pure-u-md-1-3')
          div(class='pure-menu')
            a(href='/', class='pure-menu-heading custom-brand') CoffeeScript + Sass + Couchdb
            a(href='#', class='custom-toggle', id='toggle')
              s(class='bar')
              s(class='bar')
        div(class='pure-u-1 pure-u-md-1-3')
          div(class='pure-menu pure-menu-horizontal custom-can-transform')
            ul(class='pure-menu-list')
              li(class='pure-menu-item')
                a(href='/books', class='pure-menu-link') Books                
