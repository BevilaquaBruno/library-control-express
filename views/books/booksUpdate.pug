extends ../layout

include ../includes/_mixins.pug

block content
  +chipPage({href: '/books', name: 'Books'}, {href: '#' , name: 'Update a book'})
  .colums
    .card
      .card-header
        h3=title
      .card-body
        form(id="formUpdateBook")
          input(type="hidden", name="book_id", value=databook._id)
          input(type="hidden", name="book_rev",value=databook._rev)
          .columns
            .column.col-6.col-xl-6.col-lg-12.col-md-12.col-xs-12.col-sm-12
              .col-12.col-xs-12.col-sm-12
                label.form-label(for="book_name") Name
              .col-12.col-xs-12.col-sm-12
                input(class="form-input",type="text",id="book_name", name="book_name", placeholder=databook.name, value=databook.name)
              .col-12.col-xs-12.col-sm-12
                label.form-label Author
              .col-12.col-xs-12.col-sm-12
                +createSelect('book_author',data.authors, 'No author', 'name', databook.authorid)

            .column.col-6.col-xl-6.col-lg-7.col-md-12.col-xs-12.col-sm-12
              .col-12.col-xs-12.col-sm-12
                label.form-label Genre
              .col-12.col-xs-12.col-sm-12
                +createSelect('book_genre', data.genres, 'No genre', 'description', databook.genreid)
              .col-12.col-xs-12.col-sm-12
                label.form-label Theme
              .col-12.col-xs-12.col-sm-12
                +createSelect('book_theme', data.themes, 'No theme', 'description', databook.themeid)

            .column.col-6.col-xl-6.col-lg-6.col-md-12.col-xs-12.col-sm-12
              .col-12.col-xs-12.col-sm-12
                label.fom-label(for="book_language") Language
              .col-12.col-xs-12.col-sm-12
                input(type="text", name="book_language", placeholder=databook.language, class="form-input", value=databook.language)
              .col-12.col-xs-12.col-sm-12
                label.form-label(for="book_mainlanguage") Main Language
              .col-12.col-xs-12.col-sm-12
                input(type="text", name="book_mainlanguage",class="form-input" ,placeholder=databook.mainlanguage, value=databook.mainlanguage)

            .column.col-6.col-xl-6.col-lg-6.col-md-12.col-xs-12.col-sm-12
              .col-12.col-xs-12.col-sm-12
                label.form-label Publisher
              .col-12.col-xs-12.col-sm-12
                +createSelect('book_publisher', data.publishers, 'No publisher', 'name', databook.publisherid)
              .col-12.col-xs-12.col-sm-12
                label.fom-label Relese Date
              .col-12.col-xs-12.col-sm-12
                input(type="date", name="book_releasedate", class="form-input", value=databook.releasedate)

      .card-footer
        .col-3
          button(type="submit" class="btn btn-rounded btn-success", id="submitBookUpdate") Update

block append scripts-js
  script(type='text/javascript', src='/javascripts/booksUpdate.js')
