extends ../layout

include ../includes/_mixins.pug

block content
  p= title
  a(class="btn btn-primary", href="/books/create") Create a book
  #message
  if message.show
    h2= message.msg
  else
    
    table(class="table table-hover")
      thead
        tr
          +thead-tables('id','Name','Actions')          
      tbody    
      each book in data
        tr
          td(style="display: none")= book.id
          td= book.doc.name
          td 
            +action-buttons('book','Book',book.id,"update", "delete")
block append scripts-js
  script(type='text/javascript', src='/javascripts/booksCreate.js')
