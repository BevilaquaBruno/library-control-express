extends ../layout

include ../includes/_mixins.pug

block content  
  .card
    .card-header.card-header-table-gray
      .columns
        .column.col-10
          h1= title
        .column
          a(class="btn btn-rounded btn-success", href="/themes/create") Create a theme
    .card-body        
      table(class="table table-hover table-striped table-scroll")
        thead
          tr
            +thead-tables('id','Description')          
        tbody    
        each theme in data
          tr
            td(style="display: none")= theme.id
            td= theme.doc.description            
            td(style="width: 11%") 
              +action-buttons('theme','Theme',theme.id,"update", "delete")
     
