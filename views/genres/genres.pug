extends ../layout

include ../includes/_mixins.pug

block content  
  .card
    .card-header.card-header-table-gray
      .columns
        .column.col-10
          h1= title
        .column
          a(class="btn btn-rounded btn-success", href="/genres/create") Create a genre
    .card-body        
      table(class="table table-hover table-striped table-scroll")
        thead
          tr
            +thead-tables('id','Description')          
        tbody    
        each genre in data
          tr
            td(style="display: none")= genre.id
            td= genre.doc.description            
            td(style="width: 11%") 
              +action-buttons('genre','Genre',genre.id,"update", "delete")
     
